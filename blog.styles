style InlineCode {
  font-family: "JetBrains Mono";
}
style SourceCode {
  margin-top: 12px;
  margin-bottom: 12px;
  overflow-y: scroll;
  font-family: "JetBrains Mono";
  font-size: 1rem;
}
style Heading {
  margin-top: 18px;
}
style List {
  margin-top: 12px;
  margin-bottom: 12px;
}
style Paragraph {
  :not(:last-child) {
    margin-bottom: 12px;
  }
}
style Url {
  color: var(--color-blue-800);
  text-decoration: none;

  :hover {
    color: var(--color-blue-950);
  }
}

component Parag: Paragraph {
  <p>{children}</p>
}
component Ul: Paragraph {
  <ul>{children}</ul>
}


style TextLg {
  font-size: 1.125rem;
  line-height: 1.75rem;
}

style LinkStyle {
  color: var(--color-blue-800);
  text-decoration: none;
}

style LinkStyleHover {
  :hover {
    color: var(--color-blue-950);
  }
}

style ArticleLink {
  color: var(--color-blue);

  :hover {
    color: var(--color-blue-900);
  }
}

component ArticleTitle: TextLg, ArticleLink {
  <a href={article.url} key={article.id}>{article.title}</a>
}

component ArticleDescription {
  style {
    margin: 0;
    margin-top: 4px;
    margin-bottom: 8px;
    color: rgb(53, 53, 56);
  }

  <p>{article.description}</p>
}

component ArticleList {
  <div>
    {for article in allArticles}
      <div>
        <ArticleTitle article={article} />
        <ArticleDescription article={article} />
      </div>
    {end}
  </div>
}

component CategoryLink {
  style {
    all: unset;
    cursor: pointer;
    padding: 2px 8px;
    border: 1px solid var(--color-black);
    border-radius: 4px;
    text-transform: uppercase;
    font-size: 0.7rem;
    font-weight: 500;

    :hover {
        background-color: var(--color-gray-800);
        border-color: var(--color-gray-600);
        color: var(--color-white);
    }
  }

  <a href={tag.url}>{tag.name}</a>
}

component Tags {
  style {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
  }

  <div style="margin-top: 4px">
    {for tag in tags}
      <CategoryLink tag={tag} />
    {end}
  </div>
}

component HomeUpdateItemDate {
  style {
    font-weight: 500;
  }

  <div>{children}</div>
}

component HomeUpdateItem {
  style {
    :not(:last-child) {
      margin-bottom: 12px;
    }
  }

  <div>
    <HomeUpdateItemDate>
      <a style="color: inherit; text-decoration: none;" href={update.url}>{update.date}</a>
    </HomeUpdateItemDate>

    <div style="margin: 0; padding: 0; line-height: 1.6rem;">{update.content}</div>

    {for image in update.images}
      <a href={image.url}>
        <img style="object-fit: cover; object-position: 50% 50%; width: 100%; max-width: 800px" src={image.url} />
      </a>
    {end}

    <Tags tags={update.tags} />
  </div>
}

component HomeUpdateList {
  style {
    :not(:last-child) {
      margin-bottom: 12px;
    }
  }

  <div>
    {for update in allUpdates}
      <HomeUpdateItem update={update} />
    {end}
  </div>
}

style Text {
  font-family: "Inter", sans-serif;
  font-size: 0.9rem;
}

component Header {
  style {
    display: flex;
    justify-content: space-between;
  }

  <div>{children}</div>
}

component BlogTitleTitle {
  style {
    font-size: 1.4rem;
    display: none;

    @media (min-width: 800px) {
      display: initial;
    }
  }

