component BlogTitleMobile {
  style {
    font-size: 1.4rem;
    display: initial;

    @media (min-width: 800px) {
      display: none;
    }
  }

  <div>{title}</div>
}

component NavigationLink {
  {if page == current}
    <ActiveLink>{children}</ActiveLink>
  {else}
    <Link href={url}>
      {children}
    </Link>
  {end}
}

component Page: Text, PageMargin {
  <div>
    <Header>
        <BlogTitle page={page} title={title} />

        <BlogNavigation>
            <NavigationLink page="main" url="/" current={page}>home</NavigationLink>
            <NavigationLink page="articles" url="/articles" current={page}>articles</NavigationLink>
            <NavigationLink page="posts" url="/posts" current={page}>posts</NavigationLink>
            <NavigationLink page="about" url="/about" current={page}>about</NavigationLink>
        </BlogNavigation>
    </Header>

    <BlogTitleMobile title={title} />

    <div>{children}</div>

    <Footer>
      Powered by Rust <span style="display: inline-block; max-width: 24px;"><RustIcon/></span>,
      <a style="color: inherit; text-decoration: none" href="https://docs.rs/hyper/latest/hyper/">Hyper</a>,
      <a style="color: inherit; text-decoration: none" href="https://docs.rs/markdown/latest/markdown/">markdown-rs</a>,
      <a style="color: inherit; text-decoration: none" href="https://docs.rs/inkjet/latest/inkjet/">inkjet</a> and
      <a style="color: inherit; text-decoration: none" href="https://docs.rs/math-core/latest/math_core/">math-core</a>.
    </Footer>
  </div>
}

component PageTitle {
  style {
    margin: 0;
    margin-top: 8px;
    color: var(--color-blue-800);
    font-size: 1.6rem;
    line-height: 2.6rem;
  }

  <h1>{children}</h1>
}

component PostLink {
  style {
    margin: 0;
    color: var(--color-blue);
    font-size: 1.2rem;
    text-decoration: none;
  }

  <a href={url}>{children}</a>
}

component Bio {
  style {
    font-size: 1rem;
    margin-bottom: 8px;
    line-height: 1.6rem;
  }

  <div>{children}</div>
}

component H2 {
  style {
    margin-top: 14px;
    margin-bottom: 4px;
    font-weight: 500;

    display: flex;
    align-items: center;
    gap: 8px;
  }

  <h2>{children}</h2>
}

component SocialLinks {
  style {
    padding: 0;

    @media (min-width: 576px) {
      display: flex;
      gap: 8px;
    }
  }

  <ul>{children}</ul>
}

component Button {
  style {
    text-decoration: none;

    font-style: normal;
    font-size: 0.75rem;
    font-weight: 500;

    line-height: 1em;

    padding-top: 0.3em;
    padding-bottom: 0.3em;
    padding-left: 0.3em;
    padding-right: 0.3em;

    display: inline-block;

    color: var(--color);
    border: 1px solid var(--color-black);
    border-radius: 4px;

    text-transform: uppercase;

    :hover {
      color: var(--color-white);
      border-color: var(--color-gray-600);
      background-color: var(--color-gray-800);
    }
  }

  <a href={url}>all</a>
}

component Greeting {
  style {
    margin-top: 6px;

    display: flex;
    align-items: center;
    gap: 12px;
  }

  <h1>{children}</h1>
}

component ActiveLink: LinkStyle {
  style {
    cursor: default;
    text-decoration: underline dotted;
  }

  <span>{children}</span>
}

component Link: LinkStyle, LinkStyleHover {
  <a href={href}>{children}</a>
}

component SocialLinkInner {
  style {
    color: var(--color-blue-800);
    display: flex;
    align-items: center;
    gap: 4px;
    text-decoration: none;

    :hover {
      color: var(--color-blue-950);
    }
  }

  <a href={href}>{children}</a>
}

component SocialLink {
  style {
    display: flex;

    @media (min-width: 576px) {
      :not(:last-child)::after {
        color: var(--color-blue-800);
        content: "•";
        margin-left: 6px;
      }
    }
  }

  <li><SocialLinkInner href={href}>{children}</SocialLinkInner></li>
}

