component Home {
  <Page page="main" title="">
    <Greeting>
        Hi, I'm Tim.

        <a title="Atom feed" href="/feed">
          <RssIcon />
        </a>
    </Greeting>

    <Bio>
        I am a software developer based in Famagusta, Cyprus. At the moment, I am building <Link href="https://peaklingo.com/">Peaklingo</Link>, a language app for advanced learners. My main languages are Rust, TypeScript and Python.
    </Bio>

    <AllSocialLinks />

    <H2>Latest articles <Button url="/articles" /></H2>
    <ArticleList allArticles={articles} />

    <H2>Latest updates <Button url="/posts" /></H2>
    <HomeUpdateList allUpdates={updates} />
  </Page>
}

component Category {
  style {
    all: unset;
    cursor: pointer;
    color: rgba(53, 53, 56);
    text-decoration: none;

    :hover {
      color: var(--color-blue-900);
    }
  }

  <a href={category.url}>{category.name}</a>
}

component CategoryActive {
  style {
    color: var(--color-blue-700);
  }

  <span>{category.name}</span>
}

component CategoryBox {
  style {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-top: 4px;
    margin-bottom: 12px;
    line-height: 1.1;
  }

  <div>
    {for category in categories}
      {if active == category.id}
        <CategoryActive category={category} />
      {else}
        <Category category={category} />
      {end}
    {end}
  </div>
}

component ArticleListing {
  <Page page="articles" title="Articles">
    <CategoryBox categories={categories} active={active_category} />
    <ArticleList allArticles={articles} />
  </Page>
}

component UpdateListItem {
  style {
    :not(:last-child) {
      margin-bottom: 20px;
    }
  }

  <div>
    <PostLink url={update.url}>{update.date}</PostLink>
    <div style="margin: 0; padding: 0; line-height: 1.8rem; font-size: 1.1rem">{update.content}</div>

    {for image in update.images}
      <a href={image.url}>
        <img style="object-fit: cover; object-position: 50% 50%; width: 100%; max-width: 800px" src={image.url} />
      </a>
    {end}

    <Tags tags={update.tags} />
  </div>
}

component UpdateListDetail {
  style {
    margin-top: 16px;
  }

  <div>
    {for update in allUpdates}
      <UpdateListItem update={update} />
    {end}
  </div>
}

component PostPage {
  <Page page="post" title="">
    <PostTitle>{post.published}</PostTitle>

    <ArticleText>{post.content}</ArticleText>

    {for image in post.images}
    <a href={image.url}>
        <img style="object-fit: cover; object-position: 50% 50%; width: 100%; max-width: 800px" src={image.url} />
    </a>
    {end}

    <Tags tags={post.tags} />
  </Page>
}

component PostListing {
  <Page page="posts" title="Posts">
    <CategoryBox categories={categories} active={active_category} />
    <UpdateListDetail allUpdates={posts} />
  </Page>
}

component ArticleText {
  style {
    font-size: 1.1rem;
    line-height: 2rem;
  }

  <div>{children}</div>
}

component ArticleMeta {
  style {
    margin-top: 20px;
    margin-bottom: 10px;
    font-size: 1rem;
  }

  <div>{children}</div>
}

component Feedback {
  style {
    margin-top: 12px;
    font-size: 1rem;
  }

  <div>{children}</div>
}

component ArticleCategories {
  style {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
  }

  <div>
    {for tag in categories}
      <CategoryLink tag={tag} />
    {end}
  </div>
}

component PostTitle {
  style {
    margin-top: 8px;
    color: var(--color-blue);
    font-size: 1.4rem;
  }

  <div>{children}</div>
}

component ArticlePage: Text {
  <Page page="article" title="">
    <PageTitle>{article.title}</PageTitle>
    <ArticleText>{article.text}</ArticleText>

    <ArticleMeta>
      <div><strong style="font-weight: 500">Published:</strong> {article.published}</div>

      {if article.updated != null}
        <div><strong style="font-weight: 500">Last updated:</strong> {article.updated}</div>
      {end}
    </ArticleMeta>

    <ArticleCategories categories={article.categories} />

    <Feedback>Got feedback? Feel free to send me an <a style="color: var(--color-blue)" href="mailto:tim@nieradzik.me">email</a>.</Feedback>
  </Page>
}

component SectionHeading {
  style {
   font-size: 1.2rem;
   font-weight: 500;
   margin-top: 12px;
  }

  <div>{children}</div>
}

component AboutText {
  style {
    margin-top: 8px;
    font-size: 1rem;
    line-height: 1.7rem;

    @media (min-width: 800px) {
      margin-top: 16px;
      font-size: 1.1rem;
      line-height: 2rem;
      max-width: 600px;
      margin-left: auto;
      margin-right: auto;
    }
  }

  <div>
    <Parag>
      Hello. My name is Tim. I am a former Scala developer. These days, I spend most of my time writing Rust, TypeScript and Python.
    </Parag>

    <Parag>
      I am currently building <Link href="https://peaklingo.com">Peaklingo</Link>, a language app for advanced learners. I like distributed systems and have developed a low-footprint service orchestrator that powers this website.
    </Parag>

    <span>
      My current setup is:
    </span>

    <Ul>
      <li>Asahi Linux on MacBook Pro M2</li>
      <li>Sway tiling manager with Waybar</li>
      <li>Zed IDE with Vim key bindings</li>
      <li>Nushell</li>
    </Ul>

    <Parag>
      Here is a screenshot:
      <a href={screenshot_url}>
        <img style="object-fit: cover; object-position: 50% 50%; width: 100%; max-width: 800px" src={screenshot_url} />
      </a>
    </Parag>

    <Parag>For focused reading, I prefer E Ink devices. My Onyx Palma has become the go-to device for books, articles and the occasional research paper.</Parag>

    <Parag>I include outdoor activity and sports into my daily schedule. I like going on long walks and hikes, and am a member of the local running group that trains twice a week. I have completed two half-marathons in Wrocław, Poland and Çanakkale, Turkey.</Parag>

    <Parag>I have lived for extended periods (1+ year) in Germany, UK, Croatia, Ukraine, Poland, Turkey and now reside in Cyprus.</Parag>

    <SectionHeading>Developer platforms</SectionHeading>
    <SocialLinks>
        <SocialLinkGitHub />
        <SocialLinkStackOverflow />
    </SocialLinks>

    <SectionHeading>Contact me</SectionHeading>
    <SocialLinks>
        <SocialLinkLinkedIn />
        <SocialLinkEmail />
    </SocialLinks>
  </div>
}

component AboutPage: Text {
  <Page page="about" title="About me">
    <AboutText screenshot_url={screenshot_url} />
  </Page>
}
